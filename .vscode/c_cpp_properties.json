{
    "configurations": [
        {
            "name": "Linux_for_arm",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/BareMetal/MyDrivers",
                "${workspaceFolder}/BareMetal/MyLib",
                "${workspaceFolder}/BareMetal/MyApp",
                "/usr/lib/gcc/**",
                "/usr/include/**",
                "/usr/bin/**"
            ],
            "defines": [
                "STM32F407xx",
                "USE_HAL_DRIVER",
                "__ARM_ARCH_7EM__"
            ],
            "compilerPath": "/usr/bin/arm-none-eabi-gcc",
            "compilerArgs": [
                "-mcpu=cortex-m4",
                "-mfpu=fpv4-sp-d16",
                // "-mfloat-abi=hard",
                "-mthumb"
            ],
            "intelliSenseMode": "linux-gcc-arm",
            "cStandard": "c17",
            "cppStandard": "c++20"
        }
    ],
    "version": 4
}