{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[1.0.0-编译代码]Compile All STM32 project",
            "type": "shell",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "[2.0.0-烧录代码]OpenOCD Flash STM32 BareMetal",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/stlink.cfg",
                "-f", "target/stm32f4x.cfg",
                "-c", "program BareMetal/Objects/bare_metal.elf verify reset exit"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        
        {
            "label": "[3.0.0-删除文件]Delete All Temp File",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
    ]
}